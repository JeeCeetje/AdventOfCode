set puzzleNr    [file rootname [file tail [info script]]]
set input       [split [read [open $puzzleNr\_input.txt r]] \n]


# --------------------------------------------------------------------------------
# Question 1
# --------------------------------------------------------------------------------
puts $puzzleNr:a

foreach a $input {
    foreach b $input {
        if {[expr $a + $b] == 2020} {
            puts "$a + $b = 2020, mult = [expr $a*$b]"
        }
    }
}



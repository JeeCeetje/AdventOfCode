set puzzleNr    [file rootname [file tail [info script]]]
set input       [split [read [open $puzzleNr\_input.txt r]] \n]
# set input       [split [read [open $puzzleNr\_example.txt r]] \n]
set len         [llength $input]



# --------------------------------------------------------------------------------
# Question A
# --------------------------------------------------------------------------------
puts $puzzleNr:a

set x 0
set y 0
foreach i $input {
    {*}[string map {"forward " "incr x +" "up " "incr y -" "down " "incr y +"} $i]
}

puts [expr $x * $y]



# --------------------------------------------------------------------------------
# Question B
# --------------------------------------------------------------------------------
puts $puzzleNr:b

set x 0
set y 0
set a 0
set tmp 0
foreach i $input {
    {*}[string map {"forward " "set tmp " "up " "incr a -" "down " "incr a +"} $i]
    if {$tmp > 0} {
        incr x $tmp
        incr y [expr $a*$tmp]
        set tmp 0
    }
}

puts [expr $x * $y]



